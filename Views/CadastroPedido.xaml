<Page x:Class="WpfApp.Views.CadastroPedido"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CadastroPedido">

    <StackPanel Margin="20">
        <TextBlock Text="Selecione o usuário:" Margin="0 0 0 5"/>
        <ComboBox ItemsSource="{Binding Pessoas}"
                  DisplayMemberPath="NomePessoa"
                  SelectedItem="{Binding PessoaSelecionada}"
                  Width="200" Margin="0 0 0 15"/>

        <TextBlock Text="Pedidos do usuário:" Margin="0 0 0 5"/>
        <DataGrid ItemsSource="{Binding Pedidos}" AutoGenerateColumns="false" Height="200" CanUserAddRows="False">
            <DataGrid.Columns>

                <!-- Coluna somente leitura: Id -->
                <DataGridTextColumn Header="Id"
                                    Binding="{Binding IdPedido}"
                                    Width="60*"
                                    IsReadOnly="True" />

                <!-- Coluna editável: Nome -->
                <DataGridTemplateColumn Header="Produtos" Width="200*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Ver Itens" Command="{Binding DataContext.VerItensCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Coluna editável: CPF -->
                <DataGridTemplateColumn Header="Valor Total" Width="200*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ValorTotal}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding ValorTotal, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Coluna editável: Endereço -->
                <DataGridTemplateColumn Header="Data Venda" Width="200*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DataVenda,  StringFormat=dd/MM/yyyy HH:mm}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding DataVenda, UpdateSourceTrigger=PropertyChanged , StringFormat=dd/MM/yyyy HH:mm}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Coluna editável: Endereço -->
                <DataGridTemplateColumn Header="Forma Pagamento" Width="200*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding FormaPagamento}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding FormaPagamento, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <!-- Coluna editável: Endereço -->
                <DataGridTemplateColumn Header="Status" Width="200*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Status, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
            
        </DataGrid>


    </StackPanel>
</Page>
