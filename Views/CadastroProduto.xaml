<Page x:Class="WpfApp.Views.CadastroProduto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CadastroProduto">

    <Grid>
        <StackPanel Margin="10">

            <StackPanel Orientation="Horizontal" Margin="40,0,40,30" VerticalAlignment="Center">
                <Label Content="Produto" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="txtProduto" Text="{Binding Path=NomeProduto}" Width="200" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="Pesquisar" Command="{Binding BuscarProdutos}" Width="60" Height="30" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Margin="40, 0, 40, 30">
                <DataGrid x:Name="gridProdutos"
                          ItemsSource="{Binding Produtos}"
                          AutoGenerateColumns="False"
                          HorizontalAlignment="Center"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          SelectedItem="{Binding ProdutoSelecionado, Mode=TwoWay}">

                    <DataGrid.Columns>

                        <!-- Coluna somente leitura: Id -->
                        <DataGridTextColumn Header="Id"
                            Binding="{Binding IdProduto}"
                            Width="60*"
                            IsReadOnly="True" />

                        <!-- Coluna editável: Nome -->
                        <DataGridTemplateColumn Header="Produto" Width="200*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NomeProduto}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding NomeProduto, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <!-- Coluna editável: Codigo -->
                        <DataGridTemplateColumn Header="Codigo" Width="200*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CodigoProduto}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding CodigoProduto, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <!-- Coluna editável: Valor -->
                        <DataGridTemplateColumn Header="Valor" Width="200*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ValorProduto}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding ValorProduto, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <Button Content="Incluir" Command="{Binding IncluirProduto}" Width="60" Height="30" Margin="0,25,0,0" RenderTransformOrigin="0.6,5.546"/>
                <!--<Button Content="Editar" Command="{Binding BuscarProdutos}" Width="60" Height="30" Margin="0,25,0,0" RenderTransformOrigin="0.6,5.546"/>-->
                <Button Content="Salvar" Command="{Binding Salvar}" Width="60" Height="30" Margin="0,25,0,0" RenderTransformOrigin="0.6,5.546"/>
                <Button Content="Excluir" Command="{Binding ExcluirProduto}" Width="60" Height="30" Margin="0,25,0,0" RenderTransformOrigin="0.6,5.546"/>
            </StackPanel>


        </StackPanel>

    </Grid>
</Page>
