<Page x:Class="WpfApp.Views.CadastroPessoa"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CadastroPessoa">

    <Grid>
        <StackPanel Margin="10">

            <StackPanel Orientation="Horizontal" Margin="40,0,40,30" VerticalAlignment="Center">
                <Label Content="Pessoa" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="txtPessoa" Text="{Binding Path=NomePessoa}" Width="200" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="Pesquisar" Command="{Binding BuscarPessoas}" Width="60" Height="30" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Margin="40, 0, 40, 30">
                <DataGrid x:Name="gridPessoas"
                          ItemsSource="{Binding Pessoas}"
                          AutoGenerateColumns="False"
                          HorizontalAlignment="Center"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          SelectedItem="{Binding PessoaSelecionada, Mode=TwoWay}">

                    <DataGrid.Columns>

                        <!-- Coluna somente leitura: Id -->
                        <DataGridTextColumn Header="Id"
                            Binding="{Binding IdPessoa}"
                            Width="60*"
                            IsReadOnly="True" />

                        <!-- Coluna editável: Nome -->
                        <DataGridTemplateColumn Header="Nome" Width="200*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NomePessoa}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding NomePessoa, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <!-- Coluna editável: CPF -->
                        <DataGridTemplateColumn Header="CPF" Width="200*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding NumCpf}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding NumCpf, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                        <!-- Coluna editável: Endereço -->
                        <DataGridTemplateColumn Header="Endereço" Width="200*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Endereco}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Endereco, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,25,0,0">
                <Button Content="Incluir" Command="{Binding IncluirPessoa}" Width="60" Height="30" Margin="0,25,0,0" RenderTransformOrigin="0.6,5.546"/>
                <Button Content="Salvar" Command="{Binding Salvar}" Width="60" Height="30" Margin="0,25,0,0" RenderTransformOrigin="0.6,5.546"/>
                <Button Content="Excluir" Command="{Binding ExcluirPessoa}" Width="60" Height="30" Margin="0,25,0,0" RenderTransformOrigin="0.6,5.546"/>
                <Button Content="Incluir Pedido" Command="{Binding IncluirPedido}" Width="100" Height="30" Margin="10,25,0,0" />
            </StackPanel>
            
            
        </StackPanel>
        
    </Grid>
</Page>
